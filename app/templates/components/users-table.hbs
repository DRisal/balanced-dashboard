<table class="items non-interactive">
	<thead>
		<th class="span3"><span>Date</span></th>
		<th class="span9"><span>Email</span></th>
		<th class="span1"><span></span></th>
	</thead>
	<tbody>
		{{#each user in users}}
			<tr>
				{{view "tables/cells/linked-date-cell"
					item=user
					classNames="span3"
					date=user.created_at
				}}
				<td {{bind-attr title="user.email_address"}}>
					<span class="wrap">
						{{user.email_address}}
					</span>
				</td>
				<td class="delete-container">
					<div>
						{{#unless user.noDelete}}
							<a href="#" {{action "delete" user}}>
								<i class="confirm-delete-user icon-table-x action"></i>
							</a>
						{{/unless}}
					</div>
				</td>
			</tr>
		{{else}}
			<tr>
				<td colspan="3" class="no-results">
					<span>No results</span>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>
