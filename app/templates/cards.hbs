{{#view "page-navigations/page-navigation" pageType=model.type_name title=model.title_description}}
	{{#unless model.isRemoved}}
		<div class="buttons page-actions">
			{{#if model.can_debit}}
				<a class="btn hold-button" {{action "openHoldCardModal"}}>Hold</a>
				<a class="btn debit-button" {{action "openDebitFundingInstrumentModal"}}>Debit</a>
				{{#if model.can_credit}}
					<a class="btn credit-button" {{action "openCreditFundingInstrumentModal"}}>Credit</a>
				{{/if}}
			{{/if}}
		</div>
	{{/unless}}
{{/view}}

{{#view "detail-views/body-panel"}}
	{{#view "detail-views/api-model-panel" model=model}}
		{{view detail-views/summary-sections/card-summary-section model=model}}
		{{view detail-views/description-lists/card-titled-key-values-section model=model}}
		{{view "meta-list" type=model}}
	{{/view}}

	{{#view "detail-views/main-panel"}}
		<h3>Payments</h3>
		<div class="results">
			{{view "results/embedded-transactions-table" loader=transactionsResultsLoader}}
		</div>
		<h3>Logs</h3>
		<div class="results">
			{{view "resource-logs" content=model}}
		</div>

		<h3>Events</h3>
		<div class="results">
			{{view "resource-events" content=model}}
		</div>
	{{/view}}
{{/view}}

{{#if show_download}}
	{{partial "modals/download"}}
{{/if}}
{{#if can_credit}}
	{{view "funding-instrument/credit-funding-instrument-modal" funding_instrument=model}}
{{/if}}
{{view "funding-instrument/debit-funding-instrument-modal" funding_instrument=model}}
{{view "funding-instrument/hold-card-modal" funding_instrument=model}}
