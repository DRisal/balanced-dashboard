{{#view Balanced.PageNavigationView pageType=model.type_name title=model.page_title}}
	<h1 class="page-value">
		<div class="page-type">Order escrow</div>
		{{escrow_balance}}
	</h1>
{{/view}}

{{#view Balanced.BodyPanelView}}
	{{#view Balanced.OrderPanelView model=model}}
		{{view Balanced.OrderSummarySectionView model=model}}
		{{view Balanced.OrderTitledKeyValuesSectionView model=model}}
		{{view Balanced.MetaView type=model}}
	{{/view}}

	{{#view Balanced.MainPanelView}}
		<h3>Transactions</h3>
		<div class="results">
			{{view Balanced.EmbeddedTransactionsResultsView loader=transactionsResultsLoader}}
		</div>

		<h3>Logs</h3>
		<div class="results">
			{{view Balanced.ResourceLogsView content=model}}
		</div>

		<h3>Events</h3>
		<div class="results">
			{{view Balanced.ResourceEventsView content=model}}
		</div>
	{{/view}}
{{/view}}
