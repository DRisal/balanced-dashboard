{{#view "page-navigations/page-navigation" pageType=model.type_name title=model.page_title}}
	<h1 class="page-value">
		<div class="page-type">Order escrow</div>
		{{escrow_balance}}
	</h1>
{{/view}}

{{#view "detail-views/body-panel"}}
	{{#view "detail-views/api-model-panel" model=model}}
		{{view "detail-views/list-sections/order-seller-section" model=model}}
		{{view "detail-views/list-sections/order-buyer-section" model=model}}
		{{view detail-views/description-lists/order-titled-key-values-section model=model}}
		{{view "meta-list" type=model}}

	{{/view}}

	{{#view "detail-views/main-panel"}}
		<h3>Credits</h3>
		<div class="results">
			{{view "results/order-transactions-table" loader=creditsResultsLoader}}
		</div>

		<h3>Debits</h3>
		<div class="results">
			{{view "results/order-transactions-table" loader=debitsResultsLoader}}
		</div>

		<h3>Refunds</h3>
		<div class="results">
			{{view "results/order-transactions-table" loader=refundsResultsLoader}}
		</div>

		<h3>Reversal</h3>
		<div class="results">
			{{view "results/order-transactions-table" loader=reversalsResultsLoader}}
		</div>

		<h3>Logs</h3>
		<div class="results">
			{{view "resource-logs" content=model}}
		</div>

		<h3>Events</h3>
		<div class="results">
			{{view "resource-events" content=model}}
		</div>
	{{/view}}
{{/view}}
