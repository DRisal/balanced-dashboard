{{#if view.href}}
	<a {{bind-attr href=view.href}}>
		<span>
			<time {{bind-attr datetime="view.date" title="view.date"}}>
				<span class="primary">{{human-readable-date view.date}}</span>
				<span class="secondary">{{human-readable-time view.date}}</span>
			</time>
		</span>
	</a>
{{else}}
	{{#link-to view.routeName view.item}}
		<span>
			<time {{bind-attr datetime="view.date" title="view.date"}}>
				<span class="primary">{{human-readable-date view.date}}</span>
				<span class="secondary">{{human-readable-time view.date}}</span>
			</time>
		</span>
	{{/link-to}}
{{/if}}
