<header id="header" {{bind-attr class=":container headerClass"}}>
	<div id="balanced-address">
	  <h3 class="physical-address">965 Mission St., Ste 425, San Francisco, CA 94103</h3>
	  <h3 class="support-email">support@balancedpayments.com</h3>
	</div>
	<div id="logo">
		{{#link-to 'index' class="img"}}Balanced Dashboard{{/link-to}}
	</div>
    <div>
		<div id="marketplaces-and-search">
			{{partial "header_search"}}
		</div>

        {{#if auth.isGuest}}
            <div id="site-nav">
                <div id="go-live-menu">
                    {{#link-to 'marketplaces.apply' class="nav1d"}}Register{{/link-to}}
                </div>
                <div id="docs-menu">
                    <a href="https://docs.balancedpayments.com" class="nav1d" target="new">docs</a>
                </div>
                <div id="help-menu">
                    <a href="https://www.balancedpayments.com/help" class="nav1d" target="new">help</a>
                </div>
                <div id="user-menu" class="dropdown nav pull-right">
                    {{partial "user_dropdown"}}
                </div>
            </div>
        {{else}}
            <div id="site-nav">
                <div id="docs-menu">
                    <a href="https://docs.balancedpayments.com" class="nav1d" target="new">docs</a>
                </div>
                <div id="help-menu">
                    <a href="https://www.balancedpayments.com/help" class="nav1d" target="new">help</a>
                </div>
                <div id="user-menu" class="dropdown nav pull-right">
                    {{partial "user_dropdown"}}
                </div>
            </div>
        {{/if}}

    </div>
</header>
{{#unless auth.isGuest}}
    {{view Balanced.ChangePasswordModalView viewName="changePasswordModal"}}
{{/unless}}
