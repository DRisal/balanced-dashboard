<thead>
	<tr>
		{{#view Balanced.ResultsSortableColumnHeaderView classBinding=":span3 :date view.hideDateSort::sortable" field="created_at"}}<span>Date</span>{{/view}}
		<th class="span2 type has-filter">
			<div class="dropdown filter">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					<span>Type</span>
					<b class="caret"></b>
				</a>
				<ul class="dropdown-menu type-filter filter-choices">
					<li><a href="#" {{action "changeTypeFilter" "transaction"}}>All</a></li>
					<li><a href="#" {{action "changeTypeFilter" "card_hold"}}> Holds </a></li>
					<li><a href="#" {{action "changeTypeFilter" "debit"}}> Debits </a></li>
					<li><a href="#" {{action "changeTypeFilter" "credit"}}> Credits </a></li>
					<li><a href="#" {{action "changeTypeFilter" "refund"}}> Refunds </a></li>
					<li><a href="#" {{action "changeTypeFilter" "dispute"}}> Disputes </a></li>
				</ul>
			</div>
		</th>
		<th class="span3 status has-filter">
			<div class="dropdown filter">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					<span>Status</span>
					<b class="caret"></b>
				</a>
				<ul class="dropdown-menu status-filter filter-choices">
					<li><a href="#" {{action "changeTransactionStatusFilter" "all"}}>All</a></li>
					<li><a href="#" {{action "changeTransactionStatusFilter" "pending"}}> Pending </a></li>
					<li><a href="#" {{action "changeTransactionStatusFilter" "succeeded"}}> Succeeded </a></li>
					<li><a href="#" {{action "changeTransactionStatusFilter" "failed"}}> Failed </a></li>
				</ul>
			</div>
		</th>
		<th class="span4 description"><span>Description</span></th>
		<th class="span3 account"><span>Customer</span></th>
		<th class="span3 funding-instrument"><span>Payment method</span></th>
		{{#view Balanced.ResultsSortableColumnHeaderView class="span3 amount unsorted num" field="amount"}}<span>Amount</span>{{/view}}
	</tr>
</thead>

{{#if view.transactions.hasNextPage}}
	<tfoot>
		<tr>
			<td colspan="7" class="load-more-results">
				{{#if view.transactions.loadingNextPage}}
					<div class="loader-container">
						<span class="loader loading"></span>
					</div>
				{{else}}
					<a class="btn sm secondary" {{action "loadMore" view.transactions}}>Load more</a>
				{{/if}}
			</td>
		</tr>
	</tfoot>
{{/if}}

<tbody>
	{{#each transaction in view.transactions}}
		<tr>
			{{view Balanced.LinkedDateCellView
				item=transaction
				classNames="span3"
				routeName=transaction.route_name
				date=transaction.created_at
			}}
			{{view Balanced.TransactionTypeCellView item=transaction classNames="span2"}}
			{{view Balanced.TransactionStatusCellView item=transaction classNames="span3"}}
			{{view Balanced.TransactionDescriptionCellView item=transaction classNames="span4"}}
			{{view Balanced.TransactionCustomerCellView item=transaction classNames="span4"}}

			{{view Balanced.LinkedTwoLinesCellView
				item=transaction
				routeName=transaction.route_name
				classNames="span3 funding-instrument"
				primaryLabelText=transaction.last_four
				secondaryLabelText=transaction.funding_instrument_name
			}}
			{{view Balanced.TransactionAmountCellView item=transaction classNames="span3"}}
		</tr>
	{{else}}
		<tr>
			<td colspan="7" class="no-results">
				{{#if isLoaded}}
					No results
				{{else}}
					Loading...
				{{/if}}
			</td>
		</tr>
	{{/each}}
</tbody>
