<thead>
	<tr>
		<th class="col-md-10 transaction">
			<span>Transaction</span>
		</th>
		<th class="col-md-2 amount num">
			<span>Amount</span>
		</th>
	</tr>
</thead>

<tbody>
	{{#if view.transaction}}
		<tr>
			<td class="grouped-transactions-container" colspan="2">
				{{#view "results/grouped-transactions-table"}}
					{{#if view.parentView.transaction.dispute}}
						{{view "results/grouped-transaction-row" item=view.parentView.transaction.dispute}}
					{{/if}}

					{{view "results/grouped-transaction-row" item=view.parentView.transaction class="current"}}

					{{#if view.parentView.transaction.hold}}
						{{view "results/grouped-transaction-row" item=view.parentView.transaction.hold}}
					{{/if}}

					{{#if view.parentView.transaction.refunds}}
						{{#each refund in transaction.refunds}}
							{{view "results/grouped-transaction-row" item=refund}}
						{{/each}}
					{{/if}}

					{{#if view.parentView.transaction.reversals}}
						{{#each reversal in view.parentView.transaction.reversals}}
							{{view "results/grouped-transaction-row" item=reversal}}
						{{/each}}
					{{/if}}
				{{/view}}
			</td>
		</tr>
	{{else}}
		<tr>
			<td colspan="2" class="no-results">
				{{#if view.transaction.isLoaded}}
					No results
				{{else}}
					Loading...
				{{/if}}
			</td>
		</tr>
	{{/if}}
</tbody>
