<a href="#" {{bind-attr class=":dropdown-toggle view.isSelected:active"}} data-toggle="dropdown">
	<span>{{view.toggleText}}</span>
	<b class="caret"></b>
</a>
<ul class="dropdown-menu type-filter filter-choices">
	{{#each filterLink in view.filters}}
		<li><a href="#" {{bind-attr class="filterLink.isSelected:active"}} {{action view.actionName filterLink.value target=view.parentView.parentView}}>{{filterLink.text}}</a></li>
	{{/each}}
</ul>
