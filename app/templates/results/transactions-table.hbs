<thead>
	<tr>
		<th class="span3 date view.hasNoFilter::has-filter">
			{{#if view.hasNoFilter}}
				<span>Date</span>
			{{else}}
				{{#view "results/results-loader-sort-column-header" resultsLoader=view.loader field="created_at" actionName="changeTransactionsSort"}}
					<span>Date</span>
				{{/view}}
			{{/if}}
		</th>
		{{#if view.hasNoFilter}}
			<th class="span3 type">
				<span>Type</span>
			</th>
		{{else}}
			<th class="span2 type has-filter">
				{{view "results/transactions-type-results-dropdown-filter"}}
			</th>
		{{/if}}
		{{#if view.hasNoFilter}}
			<th class="span3 status">
				<span>Status</span>
			</th>
		{{else}}
			<th class="span3 status has-filter">
				{{view "results/transactions-status-results-dropdown-filter"}}
			</th>
		{{/if}}
		<th class="span4 description"><span>Description</span></th>
		{{#unless view.isSmallTable}}
			<th class="span3 account"><span>Customer</span></th>
			<th class="span3 funding-instrument"><span>Payment method</span></th>
		{{/unless}}
		<th class="span3 amount num">
			<span>Amount</span>
		</th>
	</tr>
</thead>
{{#if view.loader.results.hasNextPage}}
	{{#if view.isSmallTable}}
		{{view "results/results-load-more" results=view.loader.results columns=5}}
	{{else}}
		{{view "results/results-load-more" results=view.loader.results columns=7}}
	{{/if}}
{{/if}}

<tbody>
	{{#each transaction in view.loader.results}}
		<tr>
			{{view "tables/cells/linked-date-cell"
				item=transaction
				classNames="span3"
				routeName=transaction.route_name
				date=transaction.created_at
			}}
			{{view "tables/cells/linked-text-cell"
				item=transaction
				labelText=transaction.type_name
				routeName=transaction.route_name
				classNames="span2 type"
				title=transaction.type_name
			}}
			{{view "tables/cells/linked-text-cell"
				item=transaction
				labelText=transaction.status
				routeName=transaction.route_name
				spanClassNamesBinding="transaction.status"
				classNames="span3 status"
				titleBinding="transaction.status"
			}}
			{{view "tables/cells/linked-text-cell"
				item=transaction
				labelText=transaction.description
				routeName=transaction.route_name
				classNames="span4"
				titleBinding="transaction.description"
			}}

			{{#unless view.isSmallTable}}
				{{view "tables/cells/transaction/customer-cell" item=transaction classNames="span4"}}

				{{view "tables/cells/linked-two-lines-cell"
					item=transaction
					routeName=transaction.route_name
					classNames="span3 funding-instrument"
					primaryLabelText=transaction.last_four
					secondaryLabelText=transaction.funding_instrument_type
					title=transaction.funding_instrument_type
				}}
			{{/unless}}

			{{view "tables/cells/transaction/amount-cell" item=transaction classNames="span3"}}
		</tr>
	{{else}}
		<tr>
			<td {{bind-attr colspan=view.colspan}} class="no-results">
				{{#if view.loader.results.isLoaded}}
					No results
				{{else}}
					Loading...
				{{/if}}
			</td>
		</tr>
	{{/each}}
</tbody>
