<thead>
	<tr>
		{{#view Balanced.ResultsSortableColumnHeaderView class="span3 label6a sortable" field="created_at"}}<span>Date</span>{{/view}}
		<th class="span3 label6a name"><span>Customer</span></th>
		<th class="span3 label6a name"><span>Business</span></th>
		<th class="span6 label6a email"><span>Recent payment method</span></th>
	</tr>
</thead>

{{#if view.customers.hasNextPage}}
	<tfoot>
		<tr>
			<td colspan="4" class="load-more-results">
				{{#if view.customers.loadingNextPage}}
					<div class="loader-container">
						<span class="loader loading"></span>
					</div>
				{{else}}
					<a class="btn secondary" {{action "loadMore" view.customers}}>Load more</a>
				{{/if}}
			</td>
		</tr>
	</tfoot>
{{/if}}

<tbody>
	{{#each customer in view.customers}}
		<tr>
			<td class="span3 date">
				{{#link-to customer.route_name customer}}<span>
					<time {{bind-attr datetime="customer.created_at"}} {{bind-attr title="customer.created_at"}}>
						<span class="primary">{{humanReadableDate customer.created_at}}</span>
						<span class="secondary">{{humanReadableTime customer.created_at}}</span>
					</time>
				</span>{{/link-to}}
			</td>
			<td class="span3 customer" {{bind-attr title="customer.display_me"}}>
				{{#link-to customer.route_name customer}}<span>
					{{#if customer.display_me}}
						<span class="primary">{{customer.display_me}}</span>
						{{#if customer.email}}
							<span class="secondary">{{customer.email}}</span>
						{{/if}}
					{{else}}
						<span class="sl-none">none</span>
					{{/if}}
				</span>{{/link-to}}
			</td>
			<td class="span3 business" {{bind-attr title="customer.business_name"}}>
				{{#link-to customer.route_name customer}}
					{{#if customer.business_name}}
						<span>{{customer.business_name}}</span>
					{{else}}
						<span class="sl-none">none</span>
					{{/if}}
				{{/link-to}}
			</td>
			<td class="span6 recent-payment-method" {{bind-attr title="customer.email"}}>
				{{#link-to customer.route_name customer}}
					{{#if customer.business_name}}
						<span>{{customer.business_name}}</span>
					{{else}}
						<span class="sl-none">none</span>
					{{/if}}
				{{/link-to}}
			</td>
		</tr>
	{{else}}
		<tr>
			<td colspan="4" class="no-results">
				{{#if isLoaded}}
					No results
				{{else}}
					Loading...
				{{/if}}
			</td>
		</tr>
	{{/each}}
</tbody>
