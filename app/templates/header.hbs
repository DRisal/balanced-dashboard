<div class="container">
	<header id="header" {{bind-attr class="auth.isGuest:header-guest:header-user headerClass"}}>
		{{render "notification_center"}}
		<div id="balanced-address">
			<h3 class="physical-address">965 Mission St., Ste 425, San Francisco, CA 94103</h3>
			<h3 class="support-email">support@balancedpayments.com</h3>
		</div>
		<div id="marketplaces-and-search">
			{{#if controllers.marketplace.isShowSearchBar}}
				{{render "marketplace/search" controllers.marketplace.model}}
			{{/if}}

			<div id="site-nav">
				{{#if controllers.marketplace.name}}
					<div class="inline dropdown borderless nav-item">
						<a class="dropdown-toggle" data-toggle="dropdown">
							<span>Escrow: {{controllers.marketplace.formattedEscrowAmount}}</span>
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a class="add-funds-btn" {{action "openModal" "modals/add-funds-modal" controllers.marketplace.model}}>Add funds</a>
							</li>
							<li>
								<a class="withdraw-funds-btn" {{action "openModal" "modals/marketplace-escrow-withdrawal-modal" controllers.marketplace.model}}>Withdraw funds</a>
							</li>
						</ul>
					</div>
				{{/if}}

				{{partial "user-dropdown"}}
			</div>
		</div>
	</header>
</div>
