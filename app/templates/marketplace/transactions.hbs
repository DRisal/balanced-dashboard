{{#view Balanced.PageNavigationView title="Transactions"}}
	<div class="buttons page-actions">
		<a class="btn sm" {{action "openModal" Balanced.Modals.DebitCardModalView}}>Debit a card</a>
		<a class="btn sm" {{action "openModal" Balanced.CreditNewFundingInstrumentModalView}}>Credit a bank account</a>
	</div>
{{/view}}

<div class="main-header activity-escrow-box">
	<div class="inline dropdown borderless right">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
			<span>Escrow: {{controllers.marketplace.formattedEscrowAmount}}</span>
			<b class="caret"></b>
		</a>
		<ul class="dropdown-menu right">
			<li>
				<a class="add-funds-btn" {{action "openModal" Balanced.CreateEscrowCreditModalView}}>Add funds</a>
			</li>
			<li>
				<a class="withdraw-funds-btn" {{action "openWithdrawFundsModal"}}>Withdraw funds</a>
			</li>
		</ul>
	</div>
</div>

<div class="results">
	<nav>
		{{view Balanced.DatePickerView viewName="dateTimePicker"}}
		{{#unless auth.isGuest}}
			{{#unless controllers.marketplace.production}}
				{{#link-to "marketplace.import_payouts" class="btn-link sm pull-right"}}
					<i class="icon icon-document-upload import-payout"></i>
					Import payouts
				{{/link-to}}
			{{/unless}}
		{{/unless}}
	</nav>
</div>

<div class="results">
	{{view Balanced.TransactionsResultsView loader=resultsLoader}}
</div>
