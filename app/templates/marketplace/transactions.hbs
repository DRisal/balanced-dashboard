{{#view Balanced.PageNavigationView title="Transactions"}}
	<div class="buttons page-actions">
		<a class="btn" {{action "openModal" Balanced.Modals.DebitCardModalView}}>Debit a card</a>
		<a class="btn" {{action "openModal" Balanced.CreditNewFundingInstrumentModalView}}>Credit a bank account</a>
	</div>
{{/view}}

<nav class="results-actions-bar">
	<div class="pull-right">
		{{#unless auth.isGuest}}
			{{#link-to "marketplace.import_payouts" class="btn-link sm"}}
				<i class="icon icon-document-upload import-payout"></i>
				Import payouts
			{{/link-to}}
		{{/unless}}
		<a {{action "openModal" Balanced.Modals.ExportCsvModalView resultsLoader}} class="btn-link sm">
			<i class="icon icon-export"></i>
			Export
		</a>
	</div>
	{{view Balanced.DatePickerView viewName="dateTimePicker"}}
</nav>
<div class="results">
	{{view Balanced.TransactionsResultsView loader=resultsLoader}}
</div>
