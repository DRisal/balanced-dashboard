<div class="search-nav">
	<ul>
		<li {{bind-attr class=":orders :filter view.totalOrders::disabled view.isOrdersTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "order" target="view"}}>{{format-number view.totalOrders}} Orders</a>
		</li>

		<li {{bind-attr class=":transactions :filter view.totalTransactions::disabled view.isTransactionsTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "transaction" target="view"}}>{{format-number view.totalTransactions}} Transactions</a>
		</li>

		<li {{bind-attr class=":customers :filter view.totalCustomers::disabled view.isCustomersTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "customer" target="view"}}>{{format-number view.totalCustomers}} Customers</a>
		</li>

		<li {{bind-attr class=":funding-instruments :filter view.totalFundingInstruments::disabled view.isFundingInstrumentsTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "funding_instrument" target="view"}}>{{format-number view.totalFundingInstruments}} Payment methods</a>
		</li>

		<li {{bind-attr class=":logs :filter view.totalLogs::disabled view.isLogsTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "log" target="view"}}>{{format-number view.totalLogs}} Logs</a>
		</li>
	</ul>
</div>

<div class="modal-body" isOpen="view.isDisplayResults">
	{{#if view.isOrdersTabSelected}}
		{{view "results/orders-table" loader=view.resultsLoader}}
	{{/if}}

	{{#if view.isTransactionsTabSelected}}
		{{view "results/transactions-table" loader=view.resultsLoader target="view"}}
	{{/if}}

	{{#if view.isCustomersTabSelected}}
		{{view "results/customers-table" loader=view.resultsLoader}}
	{{/if}}

	{{#if view.isFundingInstrumentsTabSelected}}
		{{view "results/funding-instruments-table" loader=view.resultsLoader}}
	{{/if}}

	{{#if view.isLogsTabSelected}}
		{{view "results/logs-table" loader=view.logsResultsLoader}}
	{{/if}}
</div>
