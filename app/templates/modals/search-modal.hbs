<div class="search-nav">
	<ul>
		<li {{bind-attr class=":orders :filter totalOrders::disabled isOrdersTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "order" target="view"}}>{{format-number totalOrders}} Orders</a>
		</li>

		<li {{bind-attr class=":transactions :filter totalTransactions::disabled isTransactionsTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "transaction" target="view"}}>{{format-number totalTransactions}} Transactions</a>
		</li>

		<li {{bind-attr class=":customers :filter totalCustomers::disabled isCustomersTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "customer" target="view"}}>{{format-number totalCustomers}} Customers</a>
		</li>

		<li {{bind-attr class=":funding-instruments :filter totalFundingInstruments::disabled isFundingInstrumentsTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "funding_instrument" target="view"}}>{{format-number totalFundingInstruments}} Payment methods</a>
		</li>

		<li {{bind-attr class=":logs :filter totalLogs::disabled isLogsTabSelected:selected"}} >
			<a href="#" {{action "changeTypeFilter" "log" target="view"}}>{{format-number totalLogs}} Logs</a>
		</li>
	</ul>
</div>

<div class="modal-body" isLoading=view.resultsLoader.isLoading isOpen=view.isDisplayResults>

	{{#if isOrdersTabSelected}}
		{{view "results/orders-table" loader=view.resultsLoader}}
	{{/if}}

	{{#if isTransactionsTabSelected}}
		{{view "results/transactions-table" loader=view.resultsLoader}}
	{{/if}}

	{{#if isCustomersTabSelected}}
		{{view "results/customers-table" loader=view.resultsLoader}}
	{{/if}}

	{{#if isFundingInstrumentsTabSelected}}
		{{view "results/funding-instruments-table" loader=resultsLoader}}
	{{/if}}

	{{#if isLogsTabSelected}}
		{{view "results/logs-table" loader=logsResultsLoader}}
	{{/if}}
</div>
