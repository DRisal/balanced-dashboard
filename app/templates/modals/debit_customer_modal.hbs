<form class="form-horizontal split-labels" {{action "save" target="view" on="submit"}}>
	<div class="modal-body">
		{{#unless can_debit}}
			<div class="alert alert-info row-full">
				There must be at least one card or verified bank account to debit this customer.
			</div>
		{{/unless}}
		{{partial "modals/modalErrors"}}

		<div class="control-group">
			<label class="control-label">Customer</label>
			<div class="controls">
				<span class="label1a">{{view.customer.display_me}} ({{view.customer.email}})</span>
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.source_uri:error"}}>
			<label class="control-label">Payment method</label>
			<div class="controls">
				{{view Ember.Select
					contentBinding="view.model.fundingInstruments"
					valueBinding="view.model.source"
					optionValuePath="content"
					optionLabelPath="content.description_with_type"
					class="span8"
					name="source"
			   }}
			</div>
		</div>

			<div class="control-group">
				<label class="control-label">Name on account</label>
				<div class="controls">
					<span class="label1a">{{selected_funding_instrument.name}}</span>
				</div>
			</div>

			<div class="control-group">
				<label class="control-label">Bank</label>
				<div class="controls">
					<span class="label1a">{{capitalize selected_funding_instrument.funding_instrument_name}}</span>
				</div>
			</div>

			<div {{bind-attr class=":control-group view.model.validationErrors.amount:error"}}>
				<label class="control-label">Amount</label>
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on">$</span>
						{{view Ember.TextField valueBinding="dollar_amount" name="dollar_amount" class="span"}}
					</div>
				</div>
			</div>

			<div {{bind-attr class=":control-group view.model.validationErrors.appears_on_statement_as:error"}}>
				<label class="control-label">Appears on statement as ({{selected_funding_instrument.appears_on_statement_max_length}} characters max)</label>
				<div class="controls">
					{{view Ember.TextField valueBinding="view.model.appears_on_statement_as" name="appears_on_statement_as" class="full" maxlengthBinding="selected_funding_instrument.appears_on_statement_max_length"}}
				</div>
			</div>


		<div {{bind-attr class=":control-group view.model.validationErrors.description:error"}}>
			<label class="control-label">Internal Description</label>
			<div class="controls">
				{{view Ember.TextField valueBinding="view.model.description" name="description" class="full" maxlengthBinding="Balanced.MAXLENGTH.DESCRIPTION"}}
			</div>
		</div>
	</div>
	<div class="modal-footer">
		{{view Balanced.ModalActionButtonsView submitTitle="Debit"}}
	</div>
</form>
