<form class="form-horizontal split-labels" {{action "submit" on="submit" target="view"}}>
	<div class="modal-body">
		{{partial "modals/modalErrors"}}
		{{view.model.validationErrors.fullMessages}}

		<div {{bind-attr class=":control-group view.model.validationErrors.name:error"}}>
			<label class="control-label" {{bind-attr for=view.fieldName.elementId}}>Account holder's name</label>
			<div class="controls">
				{{input valueBinding="view.model.name" class="full" name="name" viewName="fieldName"}}
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.routing_number:error"}}>
			<label class="control-label">Routing Number</label>
			<div class="controls">
				{{input valueBinding="view.model.routing_number" class="full" name="routing_number" viewName="routingNumber"}}
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.account_number:error"}}>
			<label class="control-label">Account number</label>
			<div class="controls">
				{{view Ember.TextField valueBinding="view.model.account_number" class="full" name="account_number"}}
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.type:error"}}>
			<label class="control-label">Account type</label>

			<div class="controls">
				{{view Ember.Select
					contentBinding="Balanced.BANK_ACCOUNT_TYPES"
					optionValuePath="content.value"
					optionLabelPath="content.label"
					valueBinding="view.model.account_type"
					name="account_type"
				}}
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.dollar_amount:error"}}>
			<label class="control-label">Amount</label>

			<div class="controls">
				<div class="input-prepend">
					<span class="add-on">$</span>
					{{view Ember.TextField valueBinding="view.model.dollar_amount" class="span3" name="dollar_amount"}}
				</div>
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.appears_on_statement_as:error"}}>
			<label class="control-label">Appears on statement as ({{view.model.destination.appears_on_statement_max_length}} characters max)</label>

			<div class="controls">
				{{view Ember.TextField valueBinding="view.model.appears_on_statement_as" name="appears_on_statement_as" class="full" maxlengthBinding="view.model.destination.appears_on_statement_max_length" name="appears_on_statement_as"}}
			</div>
		</div>

		<div {{bind-attr class=":control-group view.model.validationErrors.description:error"}}>
			<label class="control-label">Internal Description</label>

			<div class="controls">
				{{view Ember.TextField valueBinding="view.model.description" class="full" maxlengthBinding="Balanced.MAXLENGTH.DESCRIPTION"}}
			</div>
		</div>
	</div>

	<div class="modal-informational modal-informational-light">
		<div class="modal-informational-content modal-informational-split-content">
			<p class="informational-label">Funds will appear in the bank account by the next business day. First time credits to new accounts may take 3-5 business days.</p>
			<div class="informational-content">
				<img src="images/bank-account-instructions.png" alt="Bank Account Instructions"/>
			</div>
		</div>
	</div>

	<div class="modal-footer">
		<button class="btn secondary" type="button" name="modal-cancel" data-dismiss="modal" aria-hidden="true" {{bind-attr disabled="view.model.isSaving"}}>Cancel</button>
		<button class="btn" type="submit" name="modal-submit" {{bind-attr disabled="view.model.isSaving"}}>Credit</button>
	</div>
</form>
