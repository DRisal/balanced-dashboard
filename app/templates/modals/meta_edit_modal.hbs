{{#view Balanced.FormSectionView sectionTitle="Meta information" metaFields=view.metaDictionary.fields}}
	<label class="control-label key-value">
		{{view.parentView.firstLabelText}}
	</label>

	<label class="control-label key-value">
		{{view.parentView.secondLabelText}}
	</label>

	{{#each metaField in view.metaFields}}
		{{view Balanced.MetaFormFieldView
			model=metaField
		}}
	{{/each}}
	<div class="form-group clearfix">
		<a class="pull-right" {{action 'addField' target=view.parentView}}>Add another field</a>
	</div>
{{/view}}
