{{view Balanced.ActivityPageNavigationView resultsBinding="results"}}

<div class="main-header activity-escrow-box">
	<div class="row">
		<div class="span4 label">
			<span>Current escrow balance:</span>
		</div>
		<div class="span8 amount">
			<span>
				{{controllers.marketplace.formattedEscrowAmount}}
			</span>
		</div>

		<div class="buttons">
			<div class="buttons-container">
				<a class="btn add-funds-btn" {{action "openAddFundsModal"}}>Add funds</a>
				{{withdraw-funds-modal marketplaceBinding="controllers.marketplace.model"}}
			</div>
		</div>
	</div>
</div>

<div class="results">
	{{view Balanced.ResultsFiltersHeaderView searchResultBinding="last_loaded_search_result" from="activity"}}
</div>

{{outlet}}

{{#if show_download}}
	{{partial "modals/download"}}
{{/if}}
{{view Balanced.AddFundsModalView marketplaceBinding="controllers.marketplace.model"}}
