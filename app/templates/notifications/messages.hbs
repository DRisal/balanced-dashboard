{{#if view.hasGuestNotification}}
	{{#view Balanced.NotificationMessageView}}
		You're logged in as a temporary guest user.
		<a class="linky" {{action "openModal" Balanced.UserCreateModalView}}>
			Claim your account to save your data.
		</a>
	{{/view}}
{{/if}}

{{#if view.bankAccountsNotificationsManager.isShowBankAccountNotifications}}
	{{#if view.bankAccountsNotificationsManager.isBankAccountsEmpty}}
		{{#view Balanced.NotificationMessageView}}
			Your marketplace is not linked to any bank accounts.
			Add a bank account by visiting the
			{{#link-to 'marketplace.settings'}}settings page{{/link-to}}.
		{{/view}}
	{{/if}}

	{{#if view.bankAccountsNotificationsManager.isNeedsStartVerification}}
		{{#view Balanced.NotificationMessageView}}
			You have unverified bank accounts. Start a verification by visiting the
			{{#link-to 'marketplace.settings'}}settings page{{/link-to}}.
		{{/view}}
	{{/if}}

	{{#if view.bankAccountsNotificationsManager.isNeedsConfirmVerification}}
		{{#view Balanced.NotificationMessageView}}
			Please verify your marketplace bank account by confirming the deposit amounts.
			<a {{action "openVerifyBankAccountLink" target="controllers.application"}}>Verify now</a>
		{{/view}}
	{{/if}}
{{/if}}
