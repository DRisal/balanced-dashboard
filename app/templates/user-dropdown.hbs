<div id="user-menu" class="dropdown borderless nav-item">
{{#if auth.signedIn}}
	<a href="#" data-toggle="dropdown" class="dropdown-toggle gravatar">
		<i class="icon-customers"></i>
		<span>
			{{#if auth.isGuest}}
				Guest user
			{{else}}
				{{auth.user.email_address}}
			{{/if}}
		</span>
		<b class="caret"></b>
	</a>
	<ul class="dropdown-menu">
		{{#if auth.isGuest}}
			<li><a {{action "signUp" target="controllers.application"}}>Create an account</a></li>
		{{else}}
			{{#if auth.isAdmin}}
				<li class="administration">
					{{#link-to "administrator"}}Administration{{/link-to}}
				</li>
			{{/if}}
			<li class="change-email">
				<a href="#" {{action "openModal" "modals/change-email-modal"}}>Change email address</a>
			</li>
			<li class="change-password">
				<a href="#" {{action "openModal" "modals/change-password-modal"}}>Change password</a>
			</li>
			{{#if auth.user.otp_enabled}}
				<li class="disable-auth">
					<a href="#" {{action "openModal" "modals/disable-auth-modal"}}>Disable two-factor authentication</a>
				</li>
			{{else}}
				<li class="enable-auth">
					<a href="#" {{action "openModal" "modals/enable-auth-modal"}}>Enable two-factor authentication</a>
				</li>
			{{/if}}
		{{/if}}
		<li><a href="https://support.balancedpayments.com" target='_blank'>Help center</a></li>
		<li><a href="#" {{action "signOut"}}>Log out</a></li>
	</ul>
{{else}}
	{{#link-to 'login' class="nav1d nav-login"}}Log in{{/link-to}}
{{/if}}
</div>
