{{#view "form-fields/form-section" model=view.model apiKeyTypes=view.apiKeyTypes sectionTitle="Business type"}}
	{{view "form-fields/select-form-field" model=view.model inputClassNames="full"
		content=view.apiKeyTypes
		labelText="Who are you?"
		field="merchant.type"
	}}
{{/view}}

{{#if view.model.isBusiness}}
	{{#view "form-fields/form-section" model=view.model sectionTitle="Business information"}}
		{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
			labelText="Legal business name"
			field="business.name"
		}}

		{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
			labelText="Employer identification number"
			field="business.tax_id"
		}}

		{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
			labelText="Business address"
			field="business.address"
		}}
		{{view "form-fields/text-form-field" model=view.model
			labelText="Postal code"
			field="business.postal_code"
		}}

		{{view "form-fields/select-form-field" model=view.model inputClassNames="full"
			content=view.parentView.businessTypes
			labelText="Company type"
			field="business.company_type"
		}}

		{{view "form-fields/date-form-field"
			allowEmpty=true labelText="Incorporation date" model=view.model	field="business.incorporation_date"}}

		{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
			labelText="Phone number"
			field="merchant.phone_number"
			explanationText="(555) 555-5555"
		}}
	{{/view}}
{{/if}}

{{#view "form-fields/form-section" model=view.model sectionTitle="Personal information"}}
	{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
		labelText="Full name"
		field="person.name"
	}}

	{{view "form-fields/date-form-field"
		allowEmpty=true
		labelText="Date of birth"
		model=view.model
		field="person.dob"}}

	{{view "form-fields/text-form-field" model=view.model
		labelText="Postal Code"
		field="person.postal_code"
	}}

	{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
		labelText="Last 4 of SSN"
		field="person.ssn_last_4"
		explanationText="A verifiable social security number is recommended to underwrite your merchant. No credit checks will be performed."
	}}

	{{#unless view.model.isBusiness}}
		{{view "form-fields/text-form-field" model=view.model inputClassNames="full"
			labelText="Phone number"
			field="merchant.phone_number"
			explanationText="(555) 555-5555"
		}}
	{{/unless}}
{{/view}}
